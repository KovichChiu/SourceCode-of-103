import java.util.Scanner;
public class HW_003 {
	public static void main(String[] args) {
		Scanner scn = new Scanner(System.in);
		System.out.print("請輸入一組字串，我將判斷是否為迴文：");
		String str = scn.next();
		String str1 = new StringBuffer(str).reverse().toString();
		System.out.println("反轉後的文字"+"\t"+"\t"+str1);
		if(str.equals(str1)){
			System.out.print("這是迴文！");
		}else{
			System.out.print("這不是迴文！");
		}
	}
}
